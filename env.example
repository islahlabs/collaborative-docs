# Collaborative Docs Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Option 1: Use individual database settings
APP__DATABASE__HOST=localhost
APP__DATABASE__PORT=5432
APP__DATABASE__USERNAME=collaborative_user
APP__DATABASE__PASSWORD=collaborative_password
APP__DATABASE__DATABASE=collaborative_docs
APP__DATABASE__MAX_CONNECTIONS=10
APP__DATABASE__MIN_CONNECTIONS=2

# Option 2: Use single DATABASE_URL (overrides individual settings)
# DATABASE_URL=postgresql://collaborative_user:collaborative_password@localhost:5432/collaborative_docs

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend server settings
APP__SERVER__HOST=0.0.0.0
APP__SERVER__PORT=3000

# Application mode
RUN_MODE=development

# Logging level
RUST_LOG=info

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend dev server settings
VITE_PORT=5173
VITE_HOST=localhost

# Backend API URL for frontend
VITE_API_URL=http://localhost:3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
APP__CORS__ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Allowed methods for CORS
APP__CORS__ALLOWED_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# PostgreSQL settings for Docker
POSTGRES_DB=collaborative_docs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Uncomment and modify these for production deployment

# Production database (example: AWS RDS)
# DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/collaborative_docs

# Production server settings
# APP__SERVER__PORT=8080
# RUN_MODE=production
# RUST_LOG=warn

# Production CORS
# APP__CORS__ALLOWED_ORIGINS=["https://yourdomain.com"]

# Production frontend
# VITE_API_URL=https://yourdomain.com/api 